<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:clickable="true">


    <FrameLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/well_done_girl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:scaleType="matrix" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <FrameLayout
                android:id="@+id/banner_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#38417c"
                android:visibility="invisible">

                <include layout="@layout/banner" />
            </FrameLayout>
        </LinearLayout>

    </FrameLayout>

    <!-- Buttons -->
    <RelativeLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/button_photo"
            android:layout_width="@dimen/photoSize"
            android:layout_height="@dimen/photoSize"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/buttonNextRight">

            <ImageView
                android:id="@+id/background_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/icon_photo"
                android:layout_width="@dimen/photoImageSize"
                android:layout_height="@dimen/photoImageSize"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/photoBottom"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/sharingMarginBottom"
            android:layout_marginLeft="@dimen/sharingMarginLeft"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/button_fb"
                android:layout_width="@dimen/sharingWidth"
                android:layout_height="@dimen/sharingHeight"
                android:layout_marginBottom="@dimen/sharingBottom">

                <ImageView
                    android:id="@+id/background_fb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/icon_fb"
                    android:layout_width="@dimen/sharingSizeIconF"
                    android:layout_height="@dimen/sharingSizeIconF"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/sharingIconMarginBottom"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/button_twi"
                android:layout_width="@dimen/sharingWidth"
                android:layout_height="@dimen/sharingHeight"
                android:layout_marginBottom="@dimen/sharingBottom">

                <ImageView
                    android:id="@+id/background_twi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/icon_twi"
                    android:layout_width="@dimen/sharingSizeIcon"
                    android:layout_height="@dimen/sharingSizeIcon"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/sharingIconMarginBottom"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/button_wa"
                android:layout_width="@dimen/sharingWidth"
                android:layout_height="@dimen/sharingHeight"
                android:layout_marginBottom="@dimen/sharingBottom">

                <ImageView
                    android:id="@+id/background_wa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/icon_wa"
                    android:layout_width="@dimen/sharingSizeIcon"
                    android:layout_height="@dimen/sharingSizeIcon"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/sharingIconMarginBottom"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/button_email"
                android:layout_width="@dimen/sharingWidth"
                android:layout_height="@dimen/sharingHeight">

                <ImageView
                    android:id="@+id/background_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/icon_email"
                    android:layout_width="@dimen/sharingSizeIcon"
                    android:layout_height="@dimen/sharingSizeIcon"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/sharingIconMarginBottom"/>

            </FrameLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/button_back"
            android:layout_width="@dimen/buttonNextWidthHeight"
            android:layout_height="@dimen/buttonNextWidthHeight"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/buttonNextRight"
            android:layout_marginTop="@dimen/buttonNextTop">

            <ImageView
                android:id="@+id/button_back_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/button_back_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/buttonNextImageBottom"
                android:layout_marginLeft="@dimen/buttonNextImageRight"
                android:layout_marginRight="@dimen/buttonNextImageLeft"
                android:layout_marginTop="@dimen/buttonNextImageTop"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/button_restart"
            android:layout_width="@dimen/buttonNextWidthHeight"
            android:layout_height="@dimen/buttonNextWidthHeight"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/buttonNextTop"
            android:layout_marginRight="@dimen/buttonNextRight"
            android:layout_marginTop="@dimen/buttonNextTop">


            <ImageView
                android:id="@+id/button_restart_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/button_restart_icon"
                android:layout_width="@dimen/restartSize"
                android:layout_height="@dimen/restartSize"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/restartBottom" />
        </FrameLayout>
    </RelativeLayout>

    <View
        android:id="@+id/splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="#fff" />

</RelativeLayout>