<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center|top"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="38dp"
                android:layout_marginTop="20dp"
                android:layout_weight="5"
                android:scaleType="fitStart"
                android:src="@drawable/logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:paddingLeft="16dp">

                <FrameLayout
                    android:id="@+id/frame_help"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/image_help"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/btn_circle" />

                    <TextView
                        android:id="@+id/button_help"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/helpMarginBottom"
                        android:layout_marginTop="@dimen/helpMarginTop"
                        android:gravity="center"
                        android:text="@string/issue_symbol"
                        android:textColor="@color/whiteColor"
                        android:textSize="@dimen/textMoreAndHelp" />

                </FrameLayout>


                <FrameLayout
                    android:id="@+id/frame_more"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.55">

                    <ImageView
                        android:id="@+id/image_more"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/more_btn1" />

                    <TextView
                        android:id="@+id/button_more"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/moreMarginBottomTop"
                        android:layout_marginLeft="@dimen/startMarginLeft"
                        android:layout_marginRight="@dimen/startMarginLeft"
                        android:layout_marginTop="@dimen/moreMarginBottomTop"
                        android:gravity="center"
                        android:text="@string/more"
                        android:textColor="@color/whiteColor"
                        android:textSize="@dimen/textMoreAndHelp" />

                </FrameLayout>


                <FrameLayout
                    android:id="@+id/frame_start"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margeRightStart"
                    android:layout_weight="2.5">

                    <ImageView
                        android:id="@+id/image_start"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/start_btn" />

                    <TextView
                        android:id="@+id/button_start"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/startMarginBottomTop"
                        android:layout_marginLeft="@dimen/startMarginLeft"
                        android:layout_marginTop="@dimen/startMarginBottomTop"
                        android:gravity="center"
                        android:text="@string/start"
                        android:textColor="@color/whiteColor"
                        android:textSize="@dimen/textButtonStart" />

                </FrameLayout>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#38417c"
        android:visibility="visible">

        <include layout="@layout/banner"/>

    </LinearLayout>

</LinearLayout>