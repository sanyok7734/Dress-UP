<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/content_girl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/game" />


        <ImageView
            android:id="@+id/girl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#21222222"/>

        <RelativeLayout
            android:id="@+id/content_game"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/buttonNextRight"
                android:layout_marginTop="@dimen/buttonNextTop"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/button_back"
                    android:layout_width="@dimen/buttonNextWidthHeight"
                    android:layout_height="@dimen/buttonNextWidthHeight"
                    android:layout_weight="0.1">

                    <ImageView
                        android:id="@+id/button_back_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/btn_circle" />

                    <ImageView
                        android:id="@+id/button_back_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/buttonNextImageTop"
                        android:layout_marginBottom="@dimen/buttonNextImageBottom"
                        android:layout_marginLeft="@dimen/buttonNextImageRight"
                        android:layout_marginRight="@dimen/buttonNextImageLeft"
                        android:layout_gravity="center"
                        android:src="@drawable/back" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/button_sound"
                    android:layout_width="@dimen/buttonNextWidthHeight"
                    android:layout_height="@dimen/buttonNextWidthHeight"
                    android:layout_marginTop="@dimen/buttonSoundMarginTop"
                    android:tag="play"
                    android:layout_weight="0.1">

                    <ImageView
                        android:id="@+id/button_sound_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/btn_circle" />

                    <ImageView
                        android:id="@+id/button_sound_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/buttonNextImageTop"
                        android:layout_marginBottom="@dimen/buttonNextImageBottom"
                        android:layout_marginLeft="@dimen/buttonNextImageRight"
                        android:layout_marginRight="@dimen/buttonNextImageLeft"
                        android:layout_gravity="center"
                        android:src="@drawable/sound_ic" />
                </FrameLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/button_next"
                    android:layout_width="@dimen/buttonNextWidthHeight"
                    android:layout_height="@dimen/buttonNextWidthHeight"
                    android:layout_gravity="right|top"
                    android:layout_marginBottom="@dimen/buttonNextTop"
                    android:layout_marginRight="@dimen/buttonNextRight"
                    android:layout_marginTop="@dimen/buttonNextTop"
                    android:layout_weight="0.1">

                    <ImageView
                        android:id="@+id/button_next_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/btn_circle" />

                    <ImageView
                        android:id="@+id/button_next_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/buttonNextImageBottom"
                        android:layout_marginLeft="@dimen/buttonNextImageLeft"
                        android:layout_marginRight="@dimen/buttonNextImageRight"
                        android:layout_marginTop="@dimen/buttonNextImageTop"
                        android:src="@drawable/forward" />
                </FrameLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/margeRightListCategory"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/list_category"
                        android:layout_width="@dimen/categoryWidthHeight"
                        android:layout_height="@dimen/categoryPanelHeight"
                        android:layout_gravity="right|center"
                        android:gravity="right"
                        android:overScrollMode="never" />

                    <ImageView
                        android:id="@+id/scroll_category"
                        android:layout_width="@dimen/scrollButtonSize"
                        android:layout_height="@dimen/scrollButtonSize"
                        android:layout_gravity="center"
                        android:padding="@dimen/scrollButtonPadding"
                        android:src="@drawable/scroll_ic" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>


    <!--Content Accessories-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/additional_panel"
        android:layout_width="@dimen/panelAccessoryWidth"
        android:layout_height="match_parent" />
</LinearLayout>
